# Source: bee/templates/deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: hellobee
  labels:
    helm.sh/chart: bee-0.1.0
    app.kubernetes.io/name: bee
    app.kubernetes.io/instance: hellobee
    app.kubernetes.io/version: "front-end-site-v1"
    app.kubernetes.io/managed-by: Helm
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: bee
      app.kubernetes.io/instance: hellobee
  template:
    metadata:
      labels:
        app.kubernetes.io/name: bee
        app.kubernetes.io/instance: hellobee
    spec:
      serviceAccountName: default
      securityContext:
        {}
      containers:
        - name: bee
          securityContext:
            {}
          image: "herochinese/go-bumblebee-bee:front-end-site-v1"
          imagePullPolicy: IfNotPresent
          ports:
            - name: http
              containerPort: 9000
              protocol: TCP
          livenessProbe:
            httpGet:
              path: /
              port: 9000
              scheme: HTTP
          readinessProbe:
            httpGet:
              path: /
              port: 9000
              scheme: HTTP
          resources:
            limits:
              cpu: 200m
              memory: 128Mi
            requests:
              cpu: 100m
              memory: 64Mi

NOTES:
1. Get the application URL by running these commands:
  export POD_NAME=$(kubectl get pods --namespace go-bumble -l "app.kubernetes.io/name=bee,app.kubernetes.io/instance=hellobee" -o jsonpath="{.items[0].metadata.name}")
  echo "Visit http://127.0.0.1:9000 to use your application"
  kubectl --namespace go-bumble port-forward $POD_NAME 9000:9000
